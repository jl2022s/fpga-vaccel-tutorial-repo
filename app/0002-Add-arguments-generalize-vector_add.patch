 		queue.finish();
 
+		//printf("address: %#llx\n", (unsigned long)C);
 		std::cout << " result: \n";
-		for (int i = 0; i < 10; i++){
+		for (int i = 0; i < dimension; i++){
 			std::cout << C[i] << " ";
 		}
